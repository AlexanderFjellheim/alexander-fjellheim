---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<h2>
		{SITE_TITLE}
	</h2>
	<nav>
		<HeaderLink href="/">
			<div class="home">
				Home
			</div>
		</HeaderLink>
		
		<HeaderLink href="/blog">
			My works
		</HeaderLink>
		
		<HeaderLink href="/about">
			About
		</HeaderLink>
		
		<HeaderLink href="https://twitter.com/astrodotbuild" target="_blank">
			Twitter
		</HeaderLink>
		
		<HeaderLink href="https://github.com/withastro/astro" target="_blank">
			GitHub
		</HeaderLink>

		<HeaderLink href="/contact">
			Contact me
		</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}

	nav {
		display: flex;
		gap: 5%;
	}
</style>
